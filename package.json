{
  "name": "git-ref",
  "version": "0.3.0",
  "description": "Get the current git reference via git describe",
  "license": "MIT",
  "repository": "maxmilton/git-ref",
  "author": "Max Milton <max@happycode.ltd>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pnpm run prebuild && tsc",
    "dev": "tsc --watch --preserveWatchOutput",
    "lint": "pnpm run lint:js && pnpm run lint:ts",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --project test --noEmit",
    "prebuild": "rm -rf dist; mkdir dist",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r esbuild-register test '\\.test\\.ts$'"
  },
  "devDependencies": {
    "@types/node": "16.11.0",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "c8": "7.10.0",
    "esbuild": "0.13.7",
    "esbuild-register": "3.0.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "14.0.0",
    "eslint-plugin-import": "2.25.2",
    "prettier": "2.4.1",
    "typescript": "4.4.4",
    "uvu": "0.5.2"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
